<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/splash_gradient_background">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/splash_IMG_logo"
        android:layout_width="@dimen/logo_splash_w_and_h"
        android:layout_height="@dimen/logo_splash_w_and_h"
        android:layout_centerInParent="true"
        android:src="@drawable/budget_app_icon_xml"
        />
    <TextView
        android:id="@+id/splash_title"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/application_name"
        android:textSize="@dimen/title_splash_text_size"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/margin_top_title_splash"
        />


</RelativeLayout>